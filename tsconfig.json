{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "noImplicitReturns": true,
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src"
    ]
}